<UserControl x:Class="TestMysqlCDRAuto.Controls.MySqlConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestMysqlCDRAuto.Controls"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label Content="Server:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txt_server" Grid.Column="1" Width="180" Grid.Row="0" VerticalAlignment="Center"/>
        <Label Content="User:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txt_user" Grid.Column="1" Width="180" Grid.Row="1" VerticalAlignment="Center"/>
        <Label Content="Password:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txt_password" Grid.Column="1" Width="180" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="DataBase:" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox x:Name="txt_dataBase" Grid.Column="1" Width="180" Grid.Row="3" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
